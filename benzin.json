{
  "models": {
    "Post": {
      "text": {
        "type": "String",
        "validations": {
          "min": 10,
          "max": 50
        }
      },
      "comments": {
        "ref": "Comment",
        "relation": "hasMany"
      },
      "user": {
        "ref": "User",
        "relation": "belongsTo"
      }
    },
    "Comment": {
      "text": {
        "type": "String",
        "validations": {
          "min": 10,
          "max": 50
        }
      },
      "post": {
        "ref": "Post",
        "relation": "hasOne"
      },
      "user": {
        "ref": "User",
        "relation": "hasOne"
      }
    }
  }
}
